#include<iostream>
using namespace std;
int main()
    {int n,i,j,c=0;
      cin>>n;
      int arr[n];
      {for (i=0;i<n;i++)
      cin>>arr[i];}
      if (n==1)
      {return 0;
      }
      else
      for (i=0;i<n;i++)
      {if (arr[i]>=arr[i-1] && arr[i]>=arr[i+1])
      cout<<i<<endl;}
      if (i!=0)
      {for (j=0;j<=i;j++)
      {if (i==j)
      c+=1;}
      cout<<c;
      }
      }
